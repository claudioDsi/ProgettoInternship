<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <context-param>
        <param-name>images.directory</param-name>
        <!-- Tomcat must have write permissions on this folder -->
        <param-value>d:/Java/TomcatWork</param-value>
    </context-param>
    <context-param>
        <param-name>view.outline_template</param-name>
        <param-value>outline.ftl.html</param-value>
    </context-param>
    <context-param>
        <param-name>view.date_format</param-name>
        <param-value>dd/MM/yyyy hh:mm:ss</param-value>
    </context-param>
    <context-param>
        <param-name>view.debug</param-name>
        <param-value>true</param-value>
    </context-param>
    <context-param>
        <param-name>view.template_directory</param-name>
        <param-value>templates</param-value>
    </context-param>
    <context-param>
        <param-name>view.data.author</param-name>
        <param-value>Giuseppe Della Penna</param-value>
    </context-param>
    <context-param>
        <param-name>view.data.homepage_url</param-name>
        <param-value>homepage</param-value>
    </context-param>
    <context-param>
        <param-name>view.encoding</param-name>
        <param-value>ISO-8859-1</param-value>
    </context-param>
    <context-param>
        <param-name>view.error_template</param-name>
        <param-value>error.ftl.html</param-value>
    </context-param>   
    
    
    
    <servlet>
        <servlet-name>InsertUser</servlet-name>
        <servlet-class>it.example.controller.InsertUser</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>InsertAzienda</servlet-name>
        <servlet-class>it.example.controller.InsertAzienda</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>InsertTirocinio</servlet-name>
        <servlet-class>it.example.controller.InsertTirocinio</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>InsertTutore</servlet-name>
        <servlet-class>it.example.controller.InsertTutore</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>InsertRichiesta</servlet-name>
        <servlet-class>it.example.controller.InsertRichiesta</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>InsertUser</servlet-name>
        <url-pattern>/insertUser</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>InsertAzienda</servlet-name>
        <url-pattern>/insertAzienda</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>InsertTirocinio</servlet-name>
        <url-pattern>/insertTirocinio</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>InsertTutore</servlet-name>
        <url-pattern>/insertTutore</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>InsertRichiesta</servlet-name>
        <url-pattern>/insertRichiesta</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <resource-ref>
        <res-ref-name>jdbc/internship</res-ref-name>
        <res-type>javax.sql.DataSource</res-type>
        <res-auth>Container</res-auth>
        <res-sharing-scope>Shareable</res-sharing-scope>
    </resource-ref>
   
    
    
</web-app>
